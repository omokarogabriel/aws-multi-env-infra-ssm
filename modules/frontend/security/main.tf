}

###SECURITY GROUP RULE###

resource "aws_security_group_rule" "asg_ec2_from_alb" {
  type                     = "ingress"
  from_port                = 80
  to_port                  = 80
  protocol                 = "tcp"
  source_security_group_id = aws_security_group.alb_sg.id
  security_group_id        = aws_security_group.autoscaling_ec2.id
}


